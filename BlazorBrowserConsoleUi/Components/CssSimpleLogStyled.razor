@inject StyledLogger StyledLogger

<h3 style="padding-top: 24px;">Simple Log Styled</h3>

<div class="form-group">
    <select @bind="_yourLevel" class="form-select">
        <option value="@LogLevel.Default" selected>Default</option>
        <option value="@LogLevel.Info">Info</option>
        <option value="@LogLevel.Warning">Warning</option>
        <option value="@LogLevel.Error">Error</option>
    </select>
</div>
<label style="padding-top: 8px;" class="form-label">Enter CSS to Style your Console Output</label>
<div class="form-group">
    <input type="text" id="yourCss" class="form-control" @bind="_yourCss"/>
</div>
<button class="button btn btn-primary" @onclick="() => SimpleLog()">Log Simple Styled</button>


@code {
    private LogLevel _yourLevel = LogLevel.Default;
    private string _yourCss = 
        "background-color: lightgreen; color: black; font-weight: bold;" +
        " padding: 4px 8px; border: 1px solid green;";

    private void SimpleLog()
    {
        StyledLogger?.SimpleLogStyled("Simple Log Styled", _yourLevel, _yourCss);
    }

}
